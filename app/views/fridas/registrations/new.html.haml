%h2 Sign up-Fridas

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .field
    = f.label :name
    %br
    = f.text_field :name, autofocus: true, autocomplete: 'name'
  
  .field
    = f.label :last_name
    %br
    = f.text_field :last_name, autofocus: true, autocomplete: 'last_name'
  
  .field
    = f.label :birthdate
    %br
    = f.date_field :birthdate, autofocus: true, autocomplete: 'birthdate'
  
  .field
    = f.label :school
    %br
    = f.text_field :school, autofocus: true, autocomplete: 'school'
  
  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, autocomplete: 'email'

  .field
    = f.label :phone
    %br
    = f.text_field :phone, autofocus: true, autocomplete: 'phone'

  .field
    = f.label :password
    - if @minimum_password_length
      %em 
        = "#{@minimum_password_length} characters minimum"
    %br
    = f.password_field :password, autocomplete: 'new-password'

  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation, autocomplete: 'new-password'
  
  .field
    = f.label :avatar
    %br
    = f.file_field :avatar

  .actions
    = f.submit 'Sign up'

= render 'fridas/shared/links'
